<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_triangles"
    tools:context=".StaticData.TrainingActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/toolbar" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_trainlayout"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabTextColor="#FFFFFF">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/steps_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/distance_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/calories_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories" />
    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_trainpager"
        android:layout_width="352dp"
        android:layout_height="541dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/refresh_trainbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REFRESH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_trainpager" />


</androidx.constraintlayout.widget.ConstraintLayout>